{
  "name": "@magic-mcp/server",
  "version": "1.0.0",
  "type": "module",
  "description": "Production-ready Magic MCP Server with Hono.js REST API and comprehensive authentication",
  "homepage": "https://github.com/yourusername/magic-mcp-server",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/magic-mcp-server.git"
  },
  "bin": {
    "magic-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "UI",
    "frontend",
    "21st.dev",
    "hono",
    "rest-api",
    "authentication",
    "oidc",
    "oauth2"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "build:prod": "npm run build && npm run test",
    "start": "node dist/index.js",
    "start:http": "SERVER_MODE=http node dist/index.js",
    "start:stdio": "SERVER_MODE=stdio node dist/index.js",
    "dev": "nodemon --watch src --ext ts,json --exec \"npm run build && npm start\"",
    "dev:http": "SERVER_MODE=http nodemon --watch src --ext ts,json --exec \"npm run build && npm start\"",
    "debug": "npm run build && npx @modelcontextprotocol/inspector node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "clean": "shx rm -rf dist",
    "prepare": "npm run build:prod",
    "docker:build": "docker build -t magic-mcp-server .",
    "docker:run": "docker run -p 3000:3000 --env-file .env magic-mcp-server"
  },
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "hono": "^4.7.11",
    "jose": "^5.9.6",
    "open": "^10.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.19.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
